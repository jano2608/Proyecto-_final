<body class="sing_in">
  

    <br>
    
    <div class=" sign_in container card  bg-dark text-white  w-50 h-75 " >
        <br>
        <h3>Inicia sesi√≥n</h3>
       
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <br>
      <div class="field">
      
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,  class:"form-control", placeholder:"Enter email"%>
      </div>
    <br>
      <div class="field">
        
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
      </div>
    
      
    <br>
      <div class="actions">
        <%= f.submit "Log in  " , class:"btn btn-danger  btn-lg btn-block " %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field1">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <% end %>
    
    <%= render "devise/shared/links" %>
    
    </div>
    </body>
